  "bugs": {
    "url": "https://github.com/ultimatecourses/node-express-typescript/issues"
  },
  "homepage": "https://github.com/ultimatecourses/node-express-typescript#readme",
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.22",
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "mongoose": "^6.1.7",
    "multer": "^1.4.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
